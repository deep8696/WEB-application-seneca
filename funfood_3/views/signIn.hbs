
<div class="login-body">
    <main class="form-signin">

      <form method="post" action="/signIn">
       
        <h1 class="h3 fw-normal">Welcome Back , </h1>
    
        <div class="form-floating">
          <input type="text" class="form-control" id="floatingInput" name="loginEmail" placeholder="name@example.com" value="{{values.loginEmail}}">
          <label for="floatingInput">Email address</label>
           {{#if fMsg}}
            <span style="color: red;">{{fMsg}}</span><br/>
           {{/if}}

        </div>
        <div class="form-floating">
          <input type="password" class="form-control" id="floatingPassword" name="passLogin" placeholder="Password">
          <label for="floatingPassword">Password</label>
           {{#if fpass}}
            <span style="color: red;">{{fpass}}</span><br/>
           {{/if}}

        </div>
    
        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>

            {{#if loginSuccess}}
            <h4 style="color: rgb(5, 189, 14);">{{loginSuccess}}</h4><br/>
           {{/if}}
        </div>
        <input type="submit" class="w-100 btn btn-lg btn-primary" type="submit" value="Sign In">
        
      </form>
    </main>
    </div>
