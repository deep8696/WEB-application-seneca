<div class="on-menu">
  <h2><span class="blue">Menu</span> for Today !!!</h2>
  <p>Try something Delicious !</p>
 
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
       {{#each meals}}
        
    <div class="col item-card">
      <div class="card shadow-sm">
        <div class="card-img item-img">
          <img src="{{cover}}"/>
        </div>

        <div class="card-body">
          <h4 class="food-title">{{this.name}}</h4>
          <p>{{this.ingredients}}</p>
          <p class="card-text">{{this.description}}</p>
          <p class="calories text-muted">Calories : {{this.calories}}</p>
          <div class="d-flex justify-content-between align-items-center">
             <span class="price">{{this.currency}} {{this.price}}</span>
            
                 {{#if user}}
              <div class="btn-group">
                  <a class="btn btn-primary btn-large">Add to cart</a>  <!-- I have Implemented for next assignment not completed yet-->           
              </div>

               {{else}}
             <div class="btn-group">
              <a href="/user/signIn" class="btn btn-primary btn-large">Order Now ?</a>              
            </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
      {{/each}}
  </div>
   
</div>