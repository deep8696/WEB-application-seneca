<div class="on-menu">
  <h2><span class="blue">Chef 's </span>special Today !!!</h2>
  <p>Try something Delicious !</p>
 {{#each meals}}
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
       {{#each this}}
    <div class="col item-card">
      <div class="card shadow-sm">
        <div class="card-img item-img">
          <img src="{{this.cover}}"/>
        </div>

        <div class="card-body">
          <h4 class="food-title">{{this.name}}</h4>
          <p>{{this.ingredients}}</p>
          <p class="card-text">{{this.description}}</p>
          <p class="calories text-muted">Calories : {{this.calories}}</p>
          <div class="d-flex justify-content-between align-items-center">
             <span class="price">{{this.currency}} {{this.price}}</span>
             <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-primary">Order Now</button>              
            </div>
          </div>
        </div>
      </div>
    </div>
     {{/each}}
  </div>
    {{/each}}
</div>